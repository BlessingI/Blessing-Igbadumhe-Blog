<section class="comment">
  <h2 class="section-form-header">Create New Post</h2>

  <form class="new-post-form">
    <div>
      <div>
        <label for="post-title">Title</label>
      </div>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <div>
        <label for="post-url">Content</label>
      </div>
      <input id="post-url" name="post-url" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>

</section>

{{#if posts.length}}
  <section>
    <h2>Your Posts</h2>
    {{#each posts as |post|}}
      <div class="title-box">

        <div class="title-header">

          <h3>
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">
              {{title}}
            </a>
          </h3>

          <span>
            <i>posted by
              {{user.username}}
              on
              {{format_date created_at}}</i></span>

        </div>
        <div class="title-body">
          {{post_url}}
        </div>

      </div>

    {{/each}}
  </section>
{{/if}}

<div class="container-box">
  <button class="new-post-button">+New Post</button>
</div>

<script src="/javascript/add-post.js"></script>